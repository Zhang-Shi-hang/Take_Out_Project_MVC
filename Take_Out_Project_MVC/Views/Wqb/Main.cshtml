
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Default/Template.cshtml";
}
<style>
    div {
        font-weight:normal;

    }
</style>
<div style="height:90px; width:100%">
    <h2 style="text-align:center;margin-top:20px;">
<img src="~/images/返回图片.jpg" style="width:25px;height:25px;float:left;margin-left:20px;margin-top:5px;" />订单</h2>
    <div style="width:80%;height:50px;margin:auto;margin-top:10px;">
        <div style="float:left;"><a href="OrderShow" target="fa" style="font-size:18px;text-decoration:none;color:black;line-height:50px;"id="div-1">全部订单</a></div>
        <div style="float:left;margin-left:25%;"><a href="CommentShow" target="fa" style="font-size:18px;text-decoration:none;color:black;line-height:50px;"id="div-2">待评价</a></div>
        <div style="float:left;margin-left:24%"><a href="RefundShow" target="fa" style="font-size:18px;text-decoration:none;color:black;line-height:50px;" id="div-3">退款</a></div>
    </div>

</div>
<div style="width:100%; height:100%;">
    <iframe src="/Wqb/OrderShow" name="fa" id="frame" style="width:100%; height:100%;border-top:0.5px solid black;border-left:0px;"></iframe>
</div>
<script>
    $(function () {
        $("#div-1").css({ 'font-weight': 'bold', 'border-bottom': '3px solid #ffd800', 'padding-bottom': '13px' });
    })
    $("#div-1").click(function () {
        $("#div-1").css({ 'font-weight': 'bold', 'border-bottom': '3px solid #ffd800', 'padding-bottom': '13px' });
        $("#div-2").css({ 'font-weight': 'normal', 'border-bottom': '0px' });
        $("#div-3").css({ 'font-weight': 'normal', 'border-bottom': '0px' });
    })
    $("#div-2").click(function () {
        $("#div-1").css({ 'font-weight': 'normal', 'border-bottom': '0px' });
        $("#div-2").css({ 'font-weight': 'bold', 'border-bottom': '3px solid #ffd800', 'padding-bottom': '13px' });
        $("#div-3").css({ 'font-weight': 'normal', 'border-bottom': '0px' });
    })
    $("#div-3").click(function () {
        $("#div-1").css({ 'font-weight': 'normal', 'border-bottom': '0px' });
        $("#div-2").css({ 'font-weight': 'normal', 'border-bottom': '0px' });
        $("#div-3").css({ 'font-weight': 'bold', 'border-bottom': '3px solid #ffd800', 'padding-bottom': '13px' });
    })
</script>

