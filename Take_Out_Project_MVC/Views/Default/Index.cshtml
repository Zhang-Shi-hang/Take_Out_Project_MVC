            <div id="odiv">
                <ul id="ul1">
                    <li><img src="~/images/枫叶1.jpg" height="0" width="0" style="        display: block;"></li>
                    <li><img src="~/images/枫叶2.jpg" height="0" width="0" style="        display: none;"></li>
